<div class="row">
	<div class="col-xs-12 col-sm-8">
		<div class="box">
			<div class="box-header">
				<div class="box-name">
					<i class="fa fa-usd"></i>
					<span>All Users</span>
				</div>
				<div class="box-icons">
					<a class="collapse-link">
						<i class="fa fa-chevron-up"></i>
					</a>
					<a class="expand-link">
						<i class="fa fa-expand"></i>
					</a>
					<a class="close-link">
						<i class="fa fa-times"></i>
					</a>
				</div>
				<div class="no-move"></div>
			</div>
			<div class="box-content no-padding">
				<table class="table table-bordered table-striped table-hover table-heading table-datatable" id="datatable-1">
					<thead>
						<tr>
							<th>ID</th>
							<th>Username</th>
							<th>Name</th>
							<th>Email</th>
							<th>Role</th>
						</tr>
					</thead>
					<tbody>
					<!-- Start: list_row -->
					{% for entity in entities %}
						<tr>
							<td><a  href="{{ path('admin_show', { 'id': entity.id }) }}">	{%if entity.profileImage.path is defined %}
								<img class="img-rounded" src="/BLOG/web/files/{{entity.profileImage.path}}"  alt="">
							{%else%}
								<img class="img-rounded" src="/BLOG/web/files/none.png" alt="">
							{%endif%}	</a></td>
							<td>
							
							<a  class="user-id" href="{{entity.id}}" title="{{entity.id}}">						
								<span id='entityUsername{{entity.id}}'> {{entity.username}} </span> </a></td>
							<td><span id='entityFirstname{{entity.id}}'> {{entity.firstname}} </span> <span id='entityLastname{{entity.id}}'> {{entity.lastname}}</span></td>	
							<td id='entityEmail{{entity.id}}'>{{entity.email}}</td>
							<td>
								{% for rol in entity.roles %}
									{{ rol }}
								{%endfor%}
							</td>
						</tr>
					{%endfor%}	
					<!-- End: list_row -->
					</tbody>
					<tfoot>
						<tr>
							<th>ID</th>
							<th>Username</th>
							<th>Name</th>
							<th>Email</th>
							<th>Role</th>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
	</div>

	<div class="col-xs-12 col-sm-4">
	<div class="box">
			<div class="box-header">
				<div class="box-name">
					<i class="fa fa-search"></i>
					<span>Edit User</span>
				</div>
				<div class="box-icons">
					<a class="collapse-link">
						<i class="fa fa-chevron-up"></i>
					</a>
					<a class="expand-link">
						<i class="fa fa-expand"></i>
					</a>
					<a class="close-link">
						<i class="fa fa-times"></i>
					</a>
				</div>
				<div class="no-move"></div>
			</div>

			<div class="box-content">	
					<div id="loading-mask" style="display:block">
    <p class="loader" id="loading_mask_loader"><img src="{{ asset('./bundles/gddesignadmin/images/ajax-loader-tr.gif')}}" alt="Loading..."/><br/>Please wait...</p>
</div>
			    <form id="defaultForm" name="editUser" action="/BLOG/web/app_dev.php/admin/create-user-ajax" method="get"  class="form-horizontal">				
					<fieldset>
						<legend>Select a user for editing.</legend>	
					<div id='show'>
						<div class="form-group">
							<label class="col-sm-3 control-label">First Name</label>
							<div class="col-sm-8">
								<input id="firstname" name="firstname" required="required" class="form-control" type="text">	
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label">Last Name</label>
							<div class="col-sm-8">
								<input id="lastname" name="lastname" required="required" class="form-control" type="text">	
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label">Telefon</label>
							<div class="col-sm-8">
								<input id="telefon" name="telefon" required="required" class="form-control" type="text">
							</div>
						</div>
						<div class="form-group">							
								<input id="hiddenInput" name="hiddenInput" required="required" class="form-control" type="hidden" value="dragoiovidiu2011@yahoo.com">
						</div>
						<div class="form-group">							
								<input id="id" name="id" required="required" class="form-control" type="hidden" >
						</div>			
					
						<div class="form-group">
							<label class="col-sm-3 control-label">Username </label>
							<div class="col-sm-8">								
								<input id="username" name="username" required="required" class="form-control" type="text">
								<div id="username_error"></div>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label">Email address</label>
							<div class="col-sm-8">
								<input id="email" name="email" required="required" class="form-control" type="text">	
								<div id="email_error"></div>							
							</div>
						</div>						

						<div class="form-group">							
							<div class="form-group">								
								<div class="col-sm-8 col-sm-offset-3">
									<button id='bt'  type="submit" class="btn btn-primary">Submit</button>
								</div>
							</div>
					    </div>
						
						{#
						<div class="form-group">
							<label class="col-sm-3 control-label">Role</label>
							<div class="col-sm-5">
								{{ form_widget(form.roles, {'attr': {'class': 'populate placeholder'}}) }}	
							</div>
						</div>
						#}	
					</div>{# hide #}
					</fieldset>
						
					</form>
			</div>
		</div>
		</div>
	</div>




