{% trans_default_domain 'FOSUserBundle' %}
<div class="fos_user_user_show">
    <div class="well">
        <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
        <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
        <p>Contact number: {{ user.telefon }}</p>
        <a href="{{path('edit',{'_format':'html'})}}">Edit</a><br>
        <a href="{{path('fos_user_change_password',{'_format':'html'})}}">Change Password</a><br>
        <a href="{{path('manage_account')}}">Delete Account</a><br>
    </div>
</div>
